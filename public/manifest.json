{
  "manifest_version": 3,
  "name": "Productivity Focus",
  "version": "0.1.0",
  "description": "PTransform your new tab into a personal productivity hubâ€”Pomodoro timer, daily goal, and persistent to-do list, all in one beautiful dashboard",
  "action": {
    "default_title": "Focus Mode",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": [
    "storage",
    "notifications",
    "declarativeNetRequest",
    "declarativeNetRequestWithHostAccess"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon64.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }

  ,"web_accessible_resources": [
    {
      "resources": ["blocked.html"],
      "matches": ["<all_urls>"]
    }
  ]
}