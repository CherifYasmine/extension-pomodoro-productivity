{
  "manifest_version": 3,
  "name": "Focus Productivity Pomodoro",
  "version": "0.1.0",
  "description": "Personalized greeting, main daily task, and Pomodoro focus mode.",
  "action": {
    "default_title": "Focus Mode",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage", "notifications"],
  "icons": {
    "16": "icon16.png",
    "48": "icon64.png",
    "128": "icon128.png"
  },
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  }
}
